<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Banner -->
        <template id="import_css" name="Import custom css" inherit_id="website.assets_frontend">
            <xpath expr="." position="inside">
                <link href="/web_principal/static/src/css/estilos.css" rel="stylesheet" type="text/css"/>
                <link href="/web_principal/static/src/css/header.css" rel="stylesheet" type="text/css"/>
            </xpath>
        </template>
        <template inherit_id="website.homepage" id="homepage_inherit">
            <xpath expr="//div[@id='wrap']" position="replace">
                <body>
                    <div class="header">
                        <div class="jumbotron jumbotron_web_site">
                            <div class="jumbotron_container">
                                <h1 class="jumbotron_title text-center">
                                    <img src="/web_principal/static/src/img/icon-net.png" style="width:80px;"/>
                                    <br/>
                                    <strong>
                                        BIG TALENT PLATFORM
                                    </strong>
                                    <br/>
                                    <strong>
                                        RED DE VINCULACIÓN DE TALENTOS
                                    </strong>
                                </h1>
                                <p class="small">Plataforma para la búsqueda, formación y reclutamiento de talento que
                                    las empresas requieren
                                </p>
                                <form class="form-inline">
                                    <div id="espacio_registro" class="btn-register" groups="base.group_public">
                                        <p>Regístrate como:</p>
                                        <!--Espacio para agregar botones de registro-->
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="alert text-center bg-gray text-title">
                        <div class="row text-center">
                            <div class="col-xs-6 max-width">
                                <h2>
                                    <strong>¿Cómo registrarme?</strong>
                                </h2>
                                <p class="small"></p>
                            </div>
                            <div class="col-xs-2 max-width-icon">
                                <a data-toggle="modal"
                                   data-target="#modal_info_empresas">
                                    <span class="fa fa-building-o logo"/>
                                </a>
                                <br/>
                                <strong>Empresas</strong>
                            </div>
                            <div class="col-xs-2 max-width-icon">
                                <a data-toggle="modal"
                                   data-target="#modal_info_universidades">
                                    <span class="fa fa-university logo"/>
                                </a>
                                <br/>
                                <strong>Universidades</strong>
                            </div>
                            <div class="col-xs-2 max-width-icon">
                                <a data-toggle="modal"
                                   data-target="#modal_info_talentos">
                                    <span class="fa fa-graduation-cap logo"/>
                                </a>
                                <br/>
                                <strong>Talentos</strong>
                            </div>
                        </div>
                    </div>

                    <div class="container-fluid" style="padding-top:10px;">
                        <h2 class="text-center text-title">
                            <strong>Beneficios que ofrecemos</strong>
                        </h2>
                        <hr style="border-top:1px solid #7896a9;"/>
                        <div class="row text-center">
                            <div class="col-sm-4">
                                <img src="/web_principal/static/src/img/company.png" class="image-icon"/>
                                <h3 class="text-title">EMPRESAS</h3>
                                <p class="text-muted">
                                    Publicación de vacantes, búsqueda y selección de talentos, reclutamiento de
                                    personal.
                                </p>
                            </div>
                            <div class="col-sm-4">
                                <img src="/web_principal/static/src/img/universidad.png" class="image-icon"/>
                                <h3 class="text-title">UNIVERSIDADES</h3>
                                <p class="text-muted">
                                    Convenios con universidades y gestión de alumnos
                                </p>
                            </div>
                            <div class="col-sm-4">
                                <img src="/web_principal/static/src/img/survey.png" class="image-icon"/>
                                <h3 class="text-title">EVALUACIONES</h3>
                                <p class="text-muted">
                                    Realiza entrevistas y evaluaciones en línea.
                                </p>
                            </div>
                        </div>
                        <div class="row text-center">
                            <div class="col-sm-4">
                                <img src="/web_principal/static/src/img/cv.png" class="image-icon"/>
                                <h3 class="text-title">CREA Y DESCARGA TU CV</h3>
                                <p class="text-muted">
                                    Genera tu Curriculum a partir de tu perfil.
                                </p>
                            </div>
                            <div class="col-sm-4">
                                <img src="/web_principal/static/src/img/student.png" class="image-icon"/>
                                <h3 class="text-title">ESTADÍAS</h3>
                                <p class="text-muted">
                                    Administra el proceso de estadías o prácticas profesionales de tu institución
                                </p>
                            </div>
                            <div class="col-sm-4">
                                <img src="/web_principal/static/src/img/geo.png" class="image-icon"/>
                                <h3 class="text-title">GEOLOCALIZA VACANTES</h3>
                                <p class="text-muted">
                                    Busca vacantes de empleo y prácticas
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Carrusel =======================-->
                    <div id="myCarousel" class="carousel slide text-center" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                        </ol>
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <img src="/web_principal/static/src/img/maps.jpg" class="image-center bg-secondary"
                                     style="width:100%;"/>
                                <div class="carousel-caption">
                                    <h3>
                                        <strong>UBICACIÓN DE TALENTOS</strong>
                                    </h3>
                                    <p>Ubica talentos de acuerdo a lo que buscas</p>
                                </div>
                            </div>
                            <div class="item">
                                <img src="/web_principal/static/src/img/bussines.jpg" class="image-center"
                                     style="width:100%;"/>
                                <div class="carousel-caption">
                                    <h3>
                                        <strong>LIBERA TUS ESTADÍAS</strong>
                                    </h3>
                                    <p></p>
                                </div>
                            </div>
                            <div class="item">
                                <img src="/web_principal/static/src/img/select.jpg" class="image-center"
                                     style="width:100%;"/>
                                <div class="carousel-caption">
                                    <h3>
                                        <strong>CONSIGUE TU PRIMER EMPLEO</strong>
                                    </h3>
                                    <p>Alguien está buscando tu talento!</p>
                                </div>
                            </div>
                        </div>
                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

